  section.field
    section.field-gdd.two.columns.alpha
      h3 1234
      p GDDs
    section.field-name.four.columns.omega
      h3 R3
      p Planted: 4/1/2014
article.right.ten.columns
  div(ng-include="rightSideUrl")
