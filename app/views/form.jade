extends layout

block content
  form.eight.columns.form
    fieldset
      legend Add a field
      ul
        li
          label(for="name") Field Name
          input#name(type="text", name="name", placeholder="Field name", required)
        li
          label(for="location") Nearest CIMIS Station
          input#location(type="text", name="location", placeholder="Nearest CIMIS Station", list="locations", required)
          datalist#locations
            include station-list
        li
          label(for="date") Planting Date:
          input#date(type="date", name="date", ng-model="field.plantingDate", required)
        li
          input#beans(type="radio", name="crop", value="beans")
          label(for="beans") Beans
        li
          input#corn(type="radio", name="crop", value="corn")
          label(for="corn") Corn
        li
          input#rice(type="radio", name="crop", value="rice")
          label(for="rice") Rice
        li
          input#wheat(type="radio", name="crop", value="wheat")
          label(for="wheat") Wheat
        li
          label(for="variety") Crop Variety
          input#variety(type="text", name="variety" placeholder="Krispy King")
        li
          button#submit(type="submit") Submit
